{
  "name": "anvil",
  "version": "3.2.1",
  "description": "Product Requirements Document management application for Capabilities and Enablers",
  "main": "server.ts",
  "author": "Darcy Davidson",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/darcydjr/anvil.git"
  },
  "homepage": "https://github.com/darcydjr/anvil#readme",
  "bugs": {
    "url": "https://github.com/darcydjr/anvil/issues"
  },
  "keywords": [
    "prd",
    "product-requirements",
    "capabilities",
    "enablers",
    "documentation",
    "markdown",
    "react",
    "nodejs",
    "claude-code"
  ],
  "scripts": {
    "build:server": "tsc",
    "start": "ts-node server.ts",
    "prod": "npm run build:server && npm run build && node dist/server.js",
    "dev": "concurrently \"nodemon server.ts\" \"cd client && npm run dev\"",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:start": "npm run build && npm start",
    "install:all": "npm install && cd client && npm install",
    "version:sync": "node -e \"const pkg=require('./package.json'); const clientPkg=require('./client/package.json'); clientPkg.version=pkg.version; require('fs').writeFileSync('./client/package.json', JSON.stringify(clientPkg, null, 2));\""
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/slider": "^5.0.1",
    "@react-navigation/bottom-tabs": "^7.4.7",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.8",
    "chokidar": "^4.0.3",
    "expo-file-system": "^19.0.16",
    "expo-mail-composer": "^15.0.7",
    "expo-print": "^15.0.7",
    "expo-sharing": "^14.0.7",
    "expo-sms": "^14.0.7",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "marked": "^9.1.2",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-slider": "^0.11.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/chokidar": "^1.7.5",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.7.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
